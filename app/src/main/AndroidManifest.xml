<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gabor.mybudget">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".View.Activities.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".View.Activities.RegisterActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".View.Activities.MainMenuActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".View.Activities.ItemsActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".View.Activities.TransactionsActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".View.Activities.StatisticsActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>